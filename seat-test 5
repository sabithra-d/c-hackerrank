##PASCAL TRIANGLE

#include<stdio.h>
int main()
{
    int r,c,n=1,i,j;
    scanf("%d",&r);
    for(i=0;i<r;i++)
    {
        for(c=1;c<=r-i;c++)
        {
            printf(" ");
        }
        for(j=0;j<=i;j++)
        {
            if(j==0 || i==0)
            {
                n=1;
            }
            else
            {
                n=n * (i-j+1) / j;
                
            }
            
  //oct,hex,bin          
 n=int(input())
n1=bin(n)
print("Binary Value:",n1[2:])
n2=oct(n)
print("Octal Value:",n2[2:])
n3=hex(n)
print("Hexadecimal Value:",n3[2:])           
